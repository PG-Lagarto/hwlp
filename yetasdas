        <script>
                const bars = document.querySelectorAll(".bars");
                let count = 0;

                const showNextBar = () => {
                        bars[count].classList.remove("show_bars");
                        count = (count + 1) % bars.length;
                        setTimeout(function() {
                                bars[count].classList.add("show_bars");
                        }, 1000);
                }

                // Mostrar el primer elemento al cargar la página
                bars[count]?.classList.add("show_bars");

                if (bars.length > 0) {
                        setInterval(showNextBar, 6000);
                }
        </script>


