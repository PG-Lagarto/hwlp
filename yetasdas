function errorSugerencias($texto)
{
        $ddf = fopen('visita-sugerencias.log', 'a');
        fwrite($ddf, "[" . date("r") . "] : $texto\r\n");
        fclose($ddf);
}

if (!isset($_SESSION)) {
        session_start();

        if (!isset($_SESSION["idunica"])) {
                $_SESSION["idunica"]  = GeneraId(15);
        }


        // sirve para resetear la variable sugerencias, si es que no llego a crear la OC, para que no se quede con el valor anterior de visitado
        // Verificar si la variable de sesión 'last_reset' está configurada
        if (!isset($_SESSION['last_reset'])) {
                // Si no está configurada, establecerla con la marca de tiempo actual
                $_SESSION['last_reset'] = time();
        } else {
                // Verificar si ha pasado un período de 24 horas desde la última vez que se reinició
                if (time() - $_SESSION['last_reset'] >= 24 * 60 * 60) {
                        // Si han pasado 24 horas, reiniciar la variable de sesión
                        $_SESSION['last_reset'] = time();
                        if (isset($_SESSION["sugerencia"])) {
                                unset($_SESSION["sugerencia"]);
                                errorSugerencias("Se elimina variable de sesion sugerencia");
                        }
                }
        }
}

